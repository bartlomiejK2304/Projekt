<UserControl x:Class="WPF.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#282D34">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0" 
         Margin="45,10,45,0" 
         Stretch="Uniform" 
         VerticalAlignment="Top" 
         Height="175" Grid.RowSpan="2">

            <StackPanel Orientation="Horizontal">

                <Image Source="/LOGO.png" 
               Width="17" 
               Height="57" 
               Margin="0,0,0,0" RenderTransformOrigin="1,1"/>

                <TextBlock Text="DZIENNICZEK"
                   Foreground="#FFFF0C00" 
                   FontFamily="Yu Gothic UI Semibold" 
                   VerticalAlignment="Center"
                   TextAlignment="Center" Width="90" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Viewbox>
        <Border Grid.Row="1" 
                Background="#282D33" 
                BorderBrush="#3A4149" 
                BorderThickness="5" 
                CornerRadius="8,88,0,8" 
                Padding="20" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Height="220" 
                Width="393">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Login" Grid.Row="0" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginBox" Grid.Row="1" Width="200" Background="#FF4F4A4A" Foreground="White"/>

                <TextBlock Text="Hasło" Grid.Row="2" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="3" Width="200" Background="#FF4F4A4A" Foreground="White"/>

                <Button Content="Zaloguj" x:Name="BtnLogin" Click="BtnLogin_Click"
                        Grid.Row="4" Width="120" Margin="0,15,0,0" 
                        Background="#FF4F4A4A" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
    