<UserControl x:Class="WPF.Dzienniczek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#282D34">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E2227" BorderBrush="#3A4149" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Zalogowano jako: " Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserDisplay" Text="Jan Kowalski" Foreground="#FFFF0C00" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>

                    <Button Content="Wyloguj" Margin="15,0,0,0" Padding="10,2" Background="#FF4F4A4A" Foreground="White" BorderBrush="#FFFF0C00" Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>