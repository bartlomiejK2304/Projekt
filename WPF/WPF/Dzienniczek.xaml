<UserControl x:Class="WPF.Dzienniczek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#282D34">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E2227" BorderBrush="#FFFFF9" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Zalogowano jako: " Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserDisplay" Text="Jan Kowalski" Foreground="#FFFF0C00" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>

                    <Button Content="Wyloguj" Margin="15,0,0,0" Padding="10,2" Background="#FF4F4A4A" Foreground="White" BorderBrush="#FFFF0C00" Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#E6E6FA" BorderBrush="#3A4149" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Klasa" 
               Grid.Column="0"
               Text="Klasa" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               Foreground="Black" FontSize="36"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPoprzedni" Content="◀" Click="btnPoprzedni_Click" Width="40" Height="40" Background="Lavender" BorderBrush="{x:Null}"/>

                    <Border BorderThickness="1" Margin="10,0" Width="100" Height="40">
                        <TextBlock x:Name="txtAktualnyStudent" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="16" 
                       Foreground="Black"
                       Text="Uczeń"/>
                    </Border>

                    <Button x:Name="btnNastepny" Content="▶" Click="btnPoprzedni_Click" Width="40" Height="40" Background="Lavender" BorderBrush="{x:Null}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>